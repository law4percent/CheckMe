# .env.example
# Copy this file to .env and fill in your actual credentials

# ============================================================
# SYSTEM SETTINGS
# ============================================================
PRODUCTION_MODE=true
SAVE_LOGS=true

# ============================================================
# PATH SETTINGS
# ============================================================
ANSWER_KEY_IMAGE_PATH=answer_keys/images
ANSWER_KEY_JSON_PATH=answer_keys/json
ANSWER_SHEET_IMAGE_PATH=answer_sheets/images
ANSWER_SHEET_JSON_PATH=answer_sheets/json
DATABASE_PATH=database

# ============================================================
# CAMERA SETTINGS
# ============================================================
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
SHOW_WINDOWS=true

# ============================================================
# IMAGE PROCESSING SETTINGS
# ============================================================
IMAGE_EXTENSION=jpg
TILE_WIDTH=600

# ============================================================
# GEMINI API CONFIGURATION
# ============================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
MAX_RETRY=3

# ============================================================
# FIREBASE CONFIGURATION
# ============================================================
# Path to your Firebase service account credentials JSON file
# Download from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Firebase Realtime Database URL
# Format: https://your-project-id-default-rtdb.firebaseio.com
# Find in: Firebase Console > Realtime Database > Copy database URL
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Teacher UID for Firebase RTDB uploads
TEACHER_UID=your_teacher_uid_here

# ============================================================
# PROCESS B SETTINGS
# ============================================================
# Batch size for processing answer sheets (1-100)
BATCH_SIZE=5

# Process B loop interval in seconds
PROCESS_B_INTERVAL=5

# ============================================================
# NOTES:
# ============================================================
# 1. Never commit your .env file to version control
# 2. Add .env to your .gitignore file
# 3. Keep your API keys and credentials secure
# 4. The Firebase credentials JSON file should also be in .gitignore
# 5. All paths are relative to the project root directory
# 6. Camera resolution should match your Raspberry Pi camera capabilities